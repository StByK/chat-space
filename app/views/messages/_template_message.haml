.message__content{data: {id: "#{message.id}"}}
  .message-sender
    = message.user.name
  .message-date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message-text
    - if message.text.present?
      %p
        = message.text
    - if message.image.present?
      = image_tag message.image.url